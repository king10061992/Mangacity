{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>Pseudo: {{ user.username }}</p>
    <p>Noms de familles: {{ user.name }} - Prenoms: {{ user.surname }}</p>
    <p>
        <a href="{{ path('app_codeconvention',{'code':user.code} ) }}">{{ user.code }}</a> -
        <a href="{{ path('app_localityconvention', {'locality':user.locality}) }}">{{ user.locality }}</a>
    </p>
    <p>Adresse de messagerie: {{ user.email }}</p>

</div>
