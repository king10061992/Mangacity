{# src/AppBundle/Resources/views/Convention/view.html.twig #}

{% extends "@App/layout.html.twig" %}

{% block title %}
    Message - {{ parent() }}
{% endblock %}

{% block app_body %}

    <!-- debut de l article -->
<div id="breadcrumb" class="hoc clear">
    <!-- debut du retour -->
    <ul>
        <li><a href="{{ path('app_contact') }}">Contact</a></li>
        <li><a href="{{ path('app_messagerie') }}">Messagerie</a></li>
        <li><a href="{{ path('app_viewmessage', {'id': message.id}) }}">{{ message.id }} </a> </li>
    </ul>
    <!-- fin du retour -->
</div>
<!-- fin du header -->
</div>

<!-- debut de l article -->
<!-- ################################################################################################ -->
<div class="wrapper row3">
    <main class="hoc container clear">
        <!-- corps de l article -->
        <!-- ################################################################################################ -->
        <div class="content">
            <!-- ################################################################################################ -->
            <h1>{{ message.subject }}: le {{ message.timePost|date('d/m/Y - H:i') }}</h1>

            <p>
                {{ message.content }}
            </p>
            <p> Par {{ message.author }} <span style="float: right"><a href="{{ path('app_deletemessage',{'id': message.id}) }}">Supprimer</a> - <a href="{{ path('app_messagerie') }}"> Retour </a></span></p>

        </div>


<!-- / main body -->
<div class="clear"></div>
</main>
</div>



<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<div class="wrapper row2 bgded overlay" style="background-image:url({{ asset('../img/slide/cop.jpg') }});">
    <section class="hoc cta clear">
        <!-- ################################################################################################ -->
        <div class="sectiontitle">
            <h6 class="heading">Vous avez quelque chose a dire ?</h6>
            <p>N hesiter pas a contacter le staff du site pour le moindre probleme</p>
        </div>
        <ul class="nospace inline pushright">
            <li><a class="btn" href="{{ path('app_contact') }}">Contacter nous !</a></li>
        </ul>
        <!-- ################################################################################################ -->
    </section>
</div>

{% endblock %}
    