<!DOCTYPE html>
<html lang="fr">

<head>
    <link rel="icon" type="image/png" href="{{ asset('img/default/icone.png') }}" />
    <title>MangaCity: {% block title %} Welcome {% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">


    {% block stylesheets %}
        {# On charge le CSS de bootstrap depuis le site directement #}
        <link href="{{ asset('./css/styles/layout.css') }}" rel="stylesheet" type="text/css" media="all">

    {% endblock %}

</head>

<body id="top">

<!-- Background menu -->
<div class="bgded overlay light" style="background-image:url({%  block slide %}{% endblock %});">
    <!-- Menu du dessus -->
    <div class="wrapper row0">
        <div id="topbar" class="hoc clear">
            <!-- Debut menu social -->
            <ul class="nospace">
                <li><a href="{{ path('app_home') }}"><i class="fa fa-lg fa-home"></i></a></li>
                <li><a href="{{ path('app_contact') }}" title="Call Us"><i class="fa fa-phone"></i></a></li>
                <li><a href="{{ path('app_contact') }}" title="Send a Mail"><i class="fa fa-envelope-o"></i></a></li>


                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a href="{{ path('fos_user_profile_show') }}"> Connect√© en tant que {{ app.user.username }}</a>
                    -
                    <li><a href="{{ path('logout') }}" title="Deconnexion"><i class="fa fa-lg fa-sign-in"></i></a></li>
                {% else %}
                    <li><a href="{{ path('login') }}" title="Se connecter"><i class="fa fa-lg fa-sign-in"></i></a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}" title="S inscrire"><i class="fa fa-lg fa-edit"></i></a></li>
                {% endif %}

            </ul>
            <!-- Fin du menu social -->
        </div>
    </div>

    <div class="wrapper row1">
        <header id="header" class="hoc clear">
            <!-- Debut du menu -->

            <div id="logo" class="fl_left">
                <h1><a href="{{ path('app_home') }}">Manga City</a></h1>
            </div>

            <nav id="mainav" class="fl_right">
                <ul class="clear">
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_convention') }}">Convention</a></li>
                    <li><a  href="{{ path('app_partenaire') }}">Partenaire</a></li>
                    <li><a href="{{ path('app_contact') }}">Contact</a></li>

                    {% if is_granted("ROLE_AUTEUR") %}
                        <li><a class="drop" href="#">Administration</a>
                            <ul>

                                <li><a href="{{ path('app_adminconvention') }}">Convention</a></li>

                                <li><a class="drop" href="{{ path('app_adminpartenaire') }}">Partenaire</a>
                                    <ul>
                                        <li><a href="{{ path('app_adminpartenaire') }}">Partenaire</a></li>
                                        {% if is_granted("ROLE_AUTEUR") %}
                                        <li><a href="{{ path('app_productadmin') }}">Categories</a></li>
                                        <li><a href="{{ path('app_commentspartenaire') }}">Commentaire</a></li>
                                        {% endif %}
                                    </ul>
                                </li>
                                {% if is_granted("ROLE_AUTEUR") %}
                                <li><a href="{{ path('app_messagerie') }}">Messagerie</a></li>
                                <li><a href="{{ path('adminuser') }}">Utilisateur</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    {% endif %}

                </ul>
            </nav>

            <!-- Fin du menu -->
        </header>
    </div>
<!--                                                        -->

{% block body %}

{% endblock %}

<!-- Le contenue de la page -->

<!-- Le footer-->
